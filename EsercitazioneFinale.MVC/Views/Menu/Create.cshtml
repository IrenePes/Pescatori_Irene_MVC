@model MenuViewModel

<h1>Inserisci un nuovo Menu</h1>

<form method="post">

<div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control"/>
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>

<input type="submit" value="Inserisci" class="btn btn-outline-primary" />
<input type="reset" value="Reset" class="btn btn-outline-primary" />
<a class="btn btn-outline-primary" asp-controller="Menu" asp-action="Index" type="button">Indietro</a>

</form>
